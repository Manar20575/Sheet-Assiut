// Online C++ compiler to run C++ program online 
#include <iostream> 
#include <string> 
#include<algorithm>
using namespace std;
int main(){
  int row;
  cin >> row;
  for (int i = 1; i <= row; i++){
    for (int p = 0; p < row-i; p++)  // spaces
      cout << " ";
   for (int s = 0; s < (2*i)-1; s++)  // star
      cout << "*";
  cout << endl;
  }
  //.................
  for (int i = row; i >0; i--){
    for (int p = 0; p < row-i; p++)  // spaces
      cout << " ";
   for (int s = 0; s < (2*i)-1; s++)  // star
      cout << "*";
  cout << endl;
  }
}
    
